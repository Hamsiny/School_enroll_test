@model IEnumerable<CourseSelection>

@{
    ViewBag.Title = "Course Selection List";
}

<h2>Course Selection List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            Student Name
        </th>
        <th>
            Course Name
        </th>
        <th>
            Amount Paid
        </th>
        <th>
            Payment Date
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
                @* @Html.ActionLink("Edit", "Edit", new { id = item.ID }) | *@
                @* @Html.ActionLink("Details", "Details", new { id = item.ID }) | *@
                @* @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { onclick = "return confirm('Are you sure you want to delete this course selection?');" }) *@
            </td>
        </tr>
    }
    </tbody>
</table>